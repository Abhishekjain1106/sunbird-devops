#!groovy

node('general-staging') {
    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){
          checkout scm
       }

       stage('Pre-Build'){
         sh('./pipelines/api-manager/installDeps.sh')
       }

       stage('Deploy to Dev'){
        sh 'METADATA_FILE=./pipelines/api-manager/metadata.json ENV=ntp-staging ./pipelines/api-manager/deploy.sh'
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}
