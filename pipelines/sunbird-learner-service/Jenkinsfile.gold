#!groovy

node('docker') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
       }

       stage('Pre-Build'){

         sh('./pipelines/sunbird-learner-service/installDeps.sh')

       }

       stage('Deploy'){
        step ([$class: 'CopyArtifact',
          projectName: 'Dev/Sunbird_LearnerService_Deploy_Staging',
          filter: 'metadata.json']);
          sh 'METADATA_FILE=metadata.json ARTIFACT_LABEL=gold ./pipelines/dockerTagSilver.sh'
       }

    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
