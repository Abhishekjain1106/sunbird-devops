#!groovy

node('general-spike') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
       }

       stage('Pre-Build'){

         sh('./pipelines/sunbird-learner-service/installDeps.sh')

       }

       stage('Deploy'){
        step ([$class: 'CopyArtifact',
          projectName: 'Build/Sunbird_LearnerService_Build',
          filter: 'metadata.json']);
          sh 'METADATA_FILE=metadata.json ARTIFACT_LABEL=bronze ENV=spike ./pipelines/sunbird-learner-service/deploy.sh'
          archive includes: "metadata.json"
       }
       stage('Run content service deployment ') {
            steps {
                build 'Spike/Sunbird_ActorService_Deploy_Spike'
            }
        }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
