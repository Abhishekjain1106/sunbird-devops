#!groovy

node('general-staging') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }



       stage('Pre-Build'){
         sh('./ansible/installDeps.sh')
       }

       stage('Build'){

        sh('ansible-playbook -i ansible/inventory/ntp-staging ansible/cassandra-data.yml --tags "$tags"  --vault-password-file  /run/secrets/vault-pass ')
       }

    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}