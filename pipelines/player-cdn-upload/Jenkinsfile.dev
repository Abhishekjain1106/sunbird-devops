#!groovy

node('build-slave') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh"""
            ./pipelines/setupDevopsCode.sh cdn-test
            ./pipelines/player-cdn-upload/setupPlayer.sh
            """
       }

       stage('Build'){
          sh ("docker run -v `pwd`:/work -w /work node:8.11.2-alpine sh build.sh ${cdn}")
        }
        
        stage('Deploy'){
            sh("./pipelines/player-cdn-upload/deploy.sh")
        }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
