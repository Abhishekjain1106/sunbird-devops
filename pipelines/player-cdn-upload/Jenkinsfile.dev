#!groovy

node('build-slave') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh"""
            ./pipelines/setupDevopsCode.sh cdn-test
            ./pipelines/player-cdn-upload/setupPlayer.sh
            """
       }

       stage('Build'){
          sh("./pipelines/player-cdn-upload/build.sh ${cdn}")
        }
        
        stage('Deploy'){
            sh """
                home_dir=$(pwd)
                cd sunbird-devops/ansible
                ansible-playbook -c local assets-upload.yml --vault-password-file /run/secrets/vault-pass --extra-vars assets=${home_dir}/sunbird-portal/src/app/dist
                """
        }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
