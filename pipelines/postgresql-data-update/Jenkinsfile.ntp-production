pipeline {
    agent {
        label 'general-production'
    }
    stages {
        stage('Pre-Build'){
            steps {
                sh('chmod a+x ansible/installDeps.sh')
                sh('./ansible/installDeps.sh')
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/ntp-production postgresql-data-update.yml --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}