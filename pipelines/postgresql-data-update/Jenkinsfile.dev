#!groovy

node('general-dev') {

    currentBuild.result = "SUCCESS"
    try {
        stage('Checkout'){

          checkout scm
       }
             
       stage('Pre-Build'){
                sh('chmod a+x ansible/installDeps.sh')
                sh('./ansible/installDeps.sh')
       }        
        stage('Deploy') {
            step {
                sh '''
                cd ansible
                ansible-playbook -i inventory/dev postgresql-data-update.yml --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}

