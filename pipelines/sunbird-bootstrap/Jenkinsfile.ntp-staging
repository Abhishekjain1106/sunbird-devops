#!groovy

node('general-staging') {
    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){
          checkout scm
       }

       stage('Pre-Build'){
         sh('./ansible/installDeps.sh')
       }

       stage('Build'){
        sh('ansible-playbook -i ansible/inventory/ntp-db-bootstrap ansible/bootstrap.yml --extra-vars "hosts=ntp-staging bootstrap_secret_file=ntp-bootstrap" --vault-password-file  /run/secrets/vault-pass ')
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}
