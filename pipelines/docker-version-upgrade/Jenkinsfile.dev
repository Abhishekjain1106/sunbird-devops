pipeline {
    agent {
        label 'build-slave'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }
        stage('Pre-Build'){
            steps {
                sh('./sunbird-devops/ansible/installDeps.sh')
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                cd sunbird-devops/ansible
                ansible-playbook -v -i ../../ansible/inventories/dev docker-version-upgrade.yml --vault-password-file /home/ops/valut
                '''
            }
        }
    }
}
