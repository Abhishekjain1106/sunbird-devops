#!groovy

node('general-staging') {

	currentBuild.result = "SUCCESS"

	try {

		stage('checkout')
		{
			checkout scm
			sh('./pipelines/setupDevopsCode.sh')
		}

		stage('Build'){

			step ([$class: 'CopyArtifact',
				projectName: 'Staging/Sunbird_Auth_Config_Build',
				filter: 'sunbird_auth_1.0v.config.zip',
				target: 'sunbird-devops/ansible' ]
			);

			sh('cd sunbird-devops/ansible && ansible-playbook -i ../../ansible/inventories/staging keycloak.yml --limit keycloak --tags auth-deploy-config --vault-password-file /run/secrets/vault-pass -vv')
		}

		stage('Archive'){
			sh('cp sunbird-devops/ansible/sunbird_auth_1.0v.config.zip .')
			archiveArtifacts 'sunbird_auth_1.0v.config.zip'
		}
	}
	catch (err) {
		currentBuild.result = "FAILURE"
		throw err
	}
}
