pipeline {
    agent {
        label 'general-performance'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCodeOldStructure.sh')
            }
        }

        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/ntp-performance provision.yml --tags log-es --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}
