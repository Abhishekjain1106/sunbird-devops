pipeline {
    agent {
        label 'docker'
    }
    stages {
        stage('Pre-Build'){
            steps {
                sh('chmod a+x ansible/installDeps.sh')
                sh('./ansible/installDeps.sh')
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/dev provision.yml --tags log-es --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}