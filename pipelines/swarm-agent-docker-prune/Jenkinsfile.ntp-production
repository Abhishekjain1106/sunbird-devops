pipeline {
    agent {
        label 'general-production'
    }
    triggers {
        cron('@midnight')
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }
        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -v -i inventory/ntp-production swarm-agent-docker-prune.yml --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}