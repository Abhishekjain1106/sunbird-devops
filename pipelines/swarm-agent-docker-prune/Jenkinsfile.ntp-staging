pipeline {
    agent {
        label 'general-staging'
    }
    triggers {
        cron('@midnight')
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }
        stage('Pre-Build'){
            steps {
                sh('./sunbird-devops/ansible/installDeps.sh')
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                cd sunbird-devops/ansible
                ansible-playbook -v -i ../../ansible/inventories/ntp-staging swarm-agent-docker-prune.yml --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}
