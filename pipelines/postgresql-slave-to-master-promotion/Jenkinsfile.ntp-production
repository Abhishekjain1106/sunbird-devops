pipeline {
    agent {
        label 'general-production'
    }
    stages {
        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/ntp-production postgresql-slave-to-master-promotion.yml --tags ensure-postgresql-master-stopped --vault-password-file /run/secrets/vault-pass || echo "Ignoring error while stopping master"
                ansible-playbook -i inventory/ntp-production postgresql-slave-to-master-promotion.yml --tags postgresql-slave-to-master-promotion --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}