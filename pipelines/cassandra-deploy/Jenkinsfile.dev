pipeline {
    agent {
        label 'general-dev'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }

        stage('Pre-Build'){
            steps {
                sh('./sunbird-devops/ansible/installDeps.sh')
            }
        }

        stage('Deploy') {
            step ([$class: 'CopyArtifact',
            projectName: 'New_Build/Sunbird_Cassandra_Build',
            filter: 'cassandra-migration-0.0.1-SNAPSHOT-jar-with-dependencies.jar']);
            sh '''
            cd sunbird-devops/ansible
            ansible-playbook -v -i ../../ansible/inventories/dev cassndra-deploy.yml --vault-password-file /run/secrets/vault-pass
            '''
            
        }
    }
}
