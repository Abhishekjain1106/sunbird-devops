#!groovy

node('general-dev') {

    currentBuild.result = "SUCCESS"

    try {
       stage('Checkout'){
          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
          sh('rm -r sunbird-auth')
          sh('git clone https://github.com/project-sunbird/sunbird-auth.git')
          sh('uname -a')
       }

       stage('Pre-Build'){
         sh('cd sunbird-devops/ansible && ansible-playbook -i ../../ansible/inventories/dev  keycloak.yml --tags install-maven --vault-password-file  /run/secrets/vault-pass ')
       }

       stage('Build'){
         sh('cd sunbird-devops && ls')
         step ([$class: 'CopyArtifact',
          projectName: 'Build/Keycloak_Build',
          filter: 'keycloak.tar.gz',
          target: 'sunbird-devops/ansible' ]);
         sh('ls')
         sh('cd sunbird-auth/keycloak/sms-provider && mvn package')
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}
