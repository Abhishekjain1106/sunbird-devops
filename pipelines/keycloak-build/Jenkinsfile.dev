#!groovy

node('general-dev') {

    currentBuild.result = "SUCCESS"

    try {
       stage('Checkout'){
          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
          sh('git clone https://github.com/project-sunbird/sunbird-auth.git')
       }

       stage('Pre-Build'){
         sh('./sunbird-devops/ansible/installDeps.sh')
       }

       stage('Build'){
         sh('cd sunbird-devops && ls')
         step ([$class: 'CopyArtifact',
          projectName: 'Build/Keycloak_Build',
          filter: 'keycloak.tar.gz',
          target: 'sunbird-devops/ansible' ]);
         sh('ls')
         sh('cd project-sunbird/sunbird-auth/keycloak/sms-provider && mvn package')
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}
