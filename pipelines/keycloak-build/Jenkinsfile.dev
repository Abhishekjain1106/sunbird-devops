#!groovy

node('build-slave') {

    currentBuild.result = "SUCCESS"

    try {
       stage('Checkout'){
          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
          sh('rm -rf sunbird-auth') 
          sh('git clone https://github.com/project-sunbird/sunbird-auth.git')
       }

       stage('Build'){
         sh('pwd')
         sh('ls')
         sh('cd sunbird-devops && ls')

         sh('cd sunbird-auth/keycloak/sms-provider && mvn package')

         sh('pwd')
         sh('ls')
         sh "mkdir -p output"
         writeFile file: "output/uselessfile.md", text: "This file is useless, no need to archive it."

         sh ('cp /home/ops/workspace/New_Build/Keycloak_Build/sunbird-auth/keycloak/sms-provider/target/keycloak-email-phone-autthenticator-1.0-SNAPSHOT-shaded.jar output/')
         
         archiveArtifacts artifacts: 'output/*.jar', excludes: 'output/*.md'

         sh('ls')
       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}
