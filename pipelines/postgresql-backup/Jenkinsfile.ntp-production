pipeline {
    agent {
        label 'general-production'
    }
    triggers {
        cron('@midnight')
    }
    stages {
        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/ntp-production postgresql-backup.yml --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}