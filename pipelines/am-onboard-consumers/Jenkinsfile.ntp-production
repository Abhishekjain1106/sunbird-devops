pipeline {
    agent {
        label 'kong-production'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCodeOldStructure.sh')
            }
        }

        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/ntp-production api-manager.yml --tags kong-consumer --vault-password-file /run/secrets/vault-pass -v
                '''
            }
        }
    }
}
