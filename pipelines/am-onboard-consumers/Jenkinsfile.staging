pipeline {
    agent {
        label 'kong-staging'
    }
    stages {
        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/staging api-manager.yml --tags kong-consumer --vault-password-file /run/secrets/vault-pass -v
                '''
            }
        }
    }
    post {
        success {
            archiveArtifacts allowEmptyArchive: true, artifacts:'/tmp/kong_credentials.txt'
        }
    }
}