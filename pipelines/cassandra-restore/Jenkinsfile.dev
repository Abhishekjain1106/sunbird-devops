#!groovy

node('general-dev') {

    parameters {
        string(name: 'cassandrarestore', defaultValue: 'cassandra_backup_20170725.zip', description: 'pass the variable')
      }

    currentBuild.result = "SUCCESS"
 
    try {

       stage('Checkout'){

          checkout scm
       }
      
       stage('Pre-Build'){
         sh('chmod a+x ansible/installDeps.sh')
         sh('./ansible/installDeps.sh')
       }
      
       stage('Build'){

        sh('ansible-playbook -i ansible/inventory/dev ansible/cassandra-backup.yml --tags restore --vault-password-file  /run/secrets/vault-pass --extra-vars cassandra_restore_gzip_file_name=${params.cassandrarestore}')
       }

    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}