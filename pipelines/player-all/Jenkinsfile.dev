#!groovy

node('build-slave') {

    currentBuild.result = "SUCCESS"

    try {
        
        stage(' setup'){
          step ([$class: 'CopyArtifact',
          projectName: 'New_Build/Sunbird_Player_Build',
          filter: 'metadata.json']);
        }

       stage('Checkout'){
          checkout scm
          sh"""
            ./pipelines/setupDevopsCode.sh
            ls
            ./pipelines/player-all/setupPlayer.sh ${portal_git_branch}
            """
       }

       stage('Build Assets'){
          sh ("docker run --rm -v `pwd`:/work -w /work node:8.11.2-alpine sh ./pipelines/player-all/build.sh ${cdn}")
        }
        
        stage('Deploy-cdn'){
            sh("./pipelines/player-all/deploy.sh dev")
        }

       stage('Deploy CDN'){
        sh("./pipelines/player-all/deploy.sh dev")
       }

       stage('Deploy'){
          sh 'METADATA_FILE=metadata.json ARTIFACT_LABEL=bronze ENV=dev ./pipelines/player-all/player-deploy.sh'
          archive includes: "metadata.json"
       }

    }

    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}
