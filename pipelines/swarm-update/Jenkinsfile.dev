pipeline {
    agent {
        label 'general-dev'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }

        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }

        stage('Update') {
            steps {
                sh '''
                ln -sf cloud/azure/scripts/acs-engine-swarm/common/azuredeploy.json cloud/azure/scripts/acs-engine-swarm/sunbird-dev/azuredeploy.json
                export APP_DEPLOYMENT_JSON_PATH=cloud/azure/scripts/acs-engine-swarm/sunbird-dev
                cd sunbird-devops/deploy
                DB_DEPLOYMENT=false ./provision-servers.sh
                '''
            }
        }
    }
}