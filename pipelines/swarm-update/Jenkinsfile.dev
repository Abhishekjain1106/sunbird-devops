pipeline {
    agent {
        label 'general-dev'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }

        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }

        stage('Update') {
            steps {
                sh '''
                cd sunbird-devops/deploy
                ./provision-servers.sh
                '''
            }
        }
    }
}