pipeline {
    agent {
        label 'kong-dev'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('git -C sunbird-devops pull || git clone https://github.com/project-sunbird/sunbird-devops.git sunbird-devops')
                sh('./pipelines/setupDevopsCode.sh')
            }
        }

        stage('Pre-Build'){
            steps {
                sh('./ansible/installDeps.sh')
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/dev api-manager.yml --tags kong-api --vault-password-file /run/secrets/vault-pass
                '''
            }
        }
    }
}