pipeline {
  agent {
      label 'general-production'
  }
  triggers {
        cron('@midnight')
  }
  stages {
    stage('Checkout') {
      steps {
        sh('./pipelines/setupDevopsCodeOldStructure.sh')
      }
    }
    stage('Pre-Build'){
      steps {
        sh('./pipelines/purge-old-logs/installDeps.sh')
      }
    }
    stage('Deploy') {
      steps {
        sh 'ENV=ntp-production ./pipelines/purge-old-logs/deploy.sh'
      }
    }
  }
}
