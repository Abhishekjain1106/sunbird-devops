pipeline {
    agent {
        label 'build-slave'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCode.sh')
            }
        }

        stage('Pre-Build'){
            steps {
             sh '''
              ./sunbird-devops/ansible/installDeps.sh
              git clone https://github.com/project-sunbird/open-saber.git opensaber
              '''
         }

        }

        stage('Configure') {
            steps {
            sh '''
            cd opensaber
            ./configure-dependencies.sh
            mvn clean test 
            cd java
            mvn clean install
            cd registry 
            mvn clean install
            cp registry.jar ../../../
            pwd
            cd ../../../
            ls
            pwd
            ansible-playbook -i ansible/inventories/$ENV registry.yml --vault-password-file /home/ops/vault
            '''
            }
        }
    }
}

