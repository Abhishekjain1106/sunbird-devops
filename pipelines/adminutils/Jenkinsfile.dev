#!groovy

node('general-dev') {
    currentBuild.result = "SUCCESS"

    try {
        stage('Checkout') {
            checkout scm
            sh('git -C sunbird-devops pull || git clone https://github.com/project-sunbird/sunbird-devops.git sunbird-devops')
        }

        stage('Pre-Build'){
            sh('./pipelines/setupDevopsCode.sh')
            sh('./pipelines/adminutils/installDeps.sh')
        }

        stage('Deploy'){
            step ([$class: 'CopyArtifact',
              projectName: 'Build/AM_AdminUtils_Build',
              filter: 'metadata.json']);
            sh 'METADATA_FILE=metadata.json ARTIFACT_LABEL=bronze ENV=dev ./pipelines/adminutils/deploy.sh'
            archive includes: "metadata.json"
        }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }
}