#!groovy

node('build-slave') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Checkout'){

          checkout scm
          sh('./pipelines/setupDevopsCode.sh')
       }

       stage('Pre-Build'){

         sh('./pipelines/logger/installDeps.sh')

       }

       stage('Deploy'){

         sh 'ansible-playbook -i ansible/inventories/${ENV} sunbird-devops/ansible/logging.yml --vault-password-file  /home/ops/vault
'

       }
    }
    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}
