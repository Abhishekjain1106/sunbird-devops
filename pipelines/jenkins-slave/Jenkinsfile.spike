pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Checkout') {
            steps {
                sh('./pipelines/setupDevopsCodeOldStructure.sh')
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory/spike jenkins-slave.yml --tags jenkins-slave --vault-password-file /run/secrets/vault-pass-spike
                '''
            }
        }
    }
}
