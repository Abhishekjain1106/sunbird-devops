pipeline {
  agent {
      label 'general-production'
  }
  triggers {
        cron('30 0 * * *')
  }
  stages {
    stage('Pre-Build'){
      steps {
        sh('./pipelines/es-backup/installDeps.sh')
      }
    }
    stage('Deploy') {
      steps {
        sh 'ENV=ntp-production ./pipelines/es-backup/deploy.sh'
      }
    }
  }
}
