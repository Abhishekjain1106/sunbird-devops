ALERT service_down
  IF probe_success == 0
  FOR 5m
  ANNOTATIONS {
      summary = "Service down",
      description = "{% raw %}{{ $labels.job }}{% endraw %}: The service is down.",
  }

ALERT service_replication_failure
  IF docker_service_replicas_success == 0
  FOR 5m
  ANNOTATIONS {
      summary = "Service down",
      description = "{% raw %}{{ $labels.job }}{% endraw %}: {% raw %}{{ $labels.service_name }}{% endraw %}: The service replication has failed",
  }
