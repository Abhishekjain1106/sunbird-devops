    value: "{{ postgresql_max_wal_senders }}"
  - option: wal_keep_segments
    value: "{{ postgresql_wal_keep_segments }}"
  - option: archive_mode
    value: on
  - option: archive_command
    value: "cp %p {{ postgresql_archive_dir }}/%f"

